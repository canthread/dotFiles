server {
    server_name down.tekebai.com;  # Replace with your domain

    location / {
        proxy_pass http://192.168.1.29:8080;
        proxy_http_version 1.1;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        
        # Required for qBittorrent
        proxy_set_header Referer "";
        proxy_cookie_path / "/; Secure";
        
        client_max_body_size 100M;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/down.tekebai.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/down.tekebai.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = down.tekebai.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name down.tekebai.com;
    return 404; # managed by Certbot


}